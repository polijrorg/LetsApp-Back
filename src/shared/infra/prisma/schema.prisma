datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Invite {
  id             String       @id @default(uuid())
  guests         InviteUser[]
  name           String
  begin          String
  end            String
  description    String
  phone          String
  address        String
  link           String?
  state          String
  googleId       String
  organizerPhoto String?
  organizerName  String

  @@map("invite")
}

model User {
  id                  String       @id @default(uuid())
  name                String?
  phone               String       @unique
  email               String?      @unique
  photo               String?
  code                Int?
  googleRefeshCode    String?
  microsoftRefeshCode String?
  created_at          DateTime     @default(now())
  updated_at          DateTime     @default(now())
  tokens              String?
  type                Type?
  invites             InviteUser[]
  contatos            Contato[]

  @@map("user")
}

model InviteUser {
  id        String @id @default(uuid())
  User      User   @relation(fields: [userEmail], references: [email])
  Invite    Invite @relation(fields: [idInvite], references: [id])
  userEmail String
  idInvite  String
  Status    String @default("needsAction")
}

model Contato {
  id     String  @id @default(uuid())
  name   String
  phone  String
  email  String
  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@map("contato")
}

enum Type {
  GOOGLE
  OUTLOOK
}