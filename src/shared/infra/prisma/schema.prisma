datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Invite {
  id             String             @id @default(uuid())
  guests         InviteUser[]
  name           String
  begin          String
  end            String
  description    String
  phone          String
  address        String
  link           String?
  state          String
  googleId       String
  pseudoGuests   PseudoInviteUser[]
  organizerPhoto String?
  organizerName  String

  @@map("invite")
}

model InviteUser {
  id        String  @id @default(uuid())
  User      User    @relation(fields: [userEmail], references: [email])
  Invite    Invite  @relation(fields: [inviteId], references: [id])
  userEmail String
  inviteId  String
  Status    String  @default("needsAction")
  optional  Boolean
}

model PseudoInviteUser {
  id           String     @id @default(uuid())
  pseudoUser   PseudoUser @relation(fields: [pseudoUserId], references: [id])
  Invite       Invite     @relation(fields: [inviteId], references: [id])
  optional     Boolean
  pseudoUserId String
  inviteId     String
  Status       String     @default("pseudoUser")
}

model User {
  id                String       @id @default(uuid())
  name              String?
  phone             String       @unique
  email             String?      @unique
  photo             String?
  code              Int?
  googleRefreshCode String?
  created_at        DateTime     @default(now())
  updated_at        DateTime     @default(now())
  tokens            String?
  type              Type?
  invites           InviteUser[]
  contatos          Contato[]

  @@map("user")
}

model PseudoUser {
  id      String             @id @default(uuid())
  phone   String?            @unique
  invites PseudoInviteUser[]
  email   String?            @unique

  @@map("pseudo_users")
}

model Contato {
  id     String  @id @default(uuid())
  name   String
  phone  String
  email  String
  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@map("contato")
}

enum Type {
  GOOGLE
  OUTLOOK
}