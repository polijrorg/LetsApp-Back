model User {
  id                String       @id @default(uuid())
  name              String?
  phone             String       @unique
  email             String?      @unique
  photo             String?
  code              Int?
  googleRefreshCode String?
  created_at        DateTime     @default(now())
  updated_at        DateTime     @default(now())
  token             String?
  type              Type?
  invites           InviteUser[]
  contatos          Contato[]

  @@map("user")
}

model Invite {
  id String @id @default(uuid())

  guests InviteUser[]

  @@map("invite")
}

model InviteUser {
  id        String @id @default(uuid())
  User      User   @relation(fields: [userEmail], references: [email])
  Invite    Invite @relation(fields: [idInvite], references: [id])
  userEmail String
  idInvite  String
  Status    String @default("needsAction")
}

enum Type {
  GOOGLE
  OUTLOOK
}

model PseudoUser {
  id            String         @id @default(uuid())
  phone         String?        @unique
  email         String?        @unique
  PseudoInvites PseudoInvite[]

  @@map("pseudo_users")
}

model PseudoInvite {
  id String @id @default(uuid())

  guests PseudoUser[]

  @@map("pseudo_invites")
}

model Contato {
  id     String  @id @default(uuid())
  name   String
  phone  String
  email  String
  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@map("contato")
}
