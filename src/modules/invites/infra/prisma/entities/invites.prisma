model Invite {
  id          String @id @default(uuid())
  name        String
  date        String
  beginHour   String
  endHour     String
  description String
  phone       String
  address     String
  link        String
  guests      String
  Guests      User   @relation(fields: [guests], references: [phone])
  status      Int

  @@map("invite")
}

model User {
  phone   String   @unique
  invites Invite[]

  @@map("user")
}
